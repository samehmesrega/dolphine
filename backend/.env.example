# دولفين - Dolphin Backend
# انسخ هذا الملف إلى .env وعدّل القيم

PORT=3001
NODE_ENV=development

# قاعدة البيانات PostgreSQL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/dolphin?schema=public"

# Redis (للقوائم والـ Queue لاحقاً)
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="استبدل-بكلمة-سر-قوية-جداً-32-حرف-على-الأقل"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# استقبال الليدز (للتحقق من الطلبات من الموقع)
LEADS_API_KEY="استبدل-بمفتاح-سري-للاستقبال"

# ووكومرس (للمزامنة والرفع)
WOOCOMMERCE_BASE_URL="https://your-site.com"
WOOCOMMERCE_CONSUMER_KEY="ck_xxx"
WOOCOMMERCE_CONSUMER_SECRET="cs_xxx"

# رفع الملفات
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE_MB=5
